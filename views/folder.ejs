<% if(recipes[0]) { %> 
    <% recipes.forEach( r => { %>
        <div class="container">
            <div class="col s12 m7">
            <div class="card green lighten-4 center-align">
                <div class="card-image">
                <img src="<%=r.image %>"> 
                </div>
                <div class="card-content">
                <p><%=r.title %></p>
                </div>
                <div class="card-action">
                    <form action="/show/detail" method="GET">
                        <input type="text" name="r_id" id="r_id" value="<%=r.foodId %>" hidden>
                        <button type="submit" class="waves-effect waves-light btn light-blue darken-1"><i class="material-icons left">search</i>See More</button>
                    </form>
                    <form method="POST" action="/profile/poof?_method=DELETE">
                        <input hidden type="text" name="id" value="<%= r.id %>">
                        <button type="submit" class="waves-effect waves-light btn red accent-4"><i class="material-icons left">delete</i>Remove Recipe from Folder</button>
                    </form>
                </div>
            </div>
            </div>
        </div>
    <% }); %> 
<% } else { %>
    <div class="container">
        <h2>You need to add recipes to this folder to view them here!</h2>
    </div>
<% } %> 


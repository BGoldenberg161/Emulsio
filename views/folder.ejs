<h1>Folder</h1>

<% recipes.forEach( r => { %>
    <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-small">
               <img src="<%=r.image %>"> 
            </div>
            <div class="card-content">
              <p><%=r.title %></p>
            </div>
            <div class="card-action">
                <form action="/show/detail" method="GET">
                    <input type="text" name="r_id" id="r_id" value="<%=r.foodId %>" hidden>
                    <button type="submit">See More</button>
                </form>
            </div>
          </div>
        </div>
      </div>
      <form method="POST" action="/profile/poof?_method=DELETE">
        <input type="hidden" name="id" value="<%= r.foodId %>">
        <button class="blue-grey darken-3 white-text z-depth-2" type="submit">Remove Recipe</button>
    </form>
<% }); %> 


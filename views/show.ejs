<h1>Results</h1>

<% recipies.results.forEach( r => { %>
    <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-small">
               <img src="<%=r.image %>"> 
            </div>
            <div class="card-content">
              <p><%=r.title %></p>
            </div>
            <div class="card-action">
                <form action="/show/detail" method="GET">
                    <input type="text" name="r_id" id="r_id" value="<%=r.id %>" hidden>
                    <button type="submit">See More</button>
                </form>
            </div>
          </div>
        </div>
      </div>
<% }); %> 
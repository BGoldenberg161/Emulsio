<div class="container">
<% recipes.results.forEach( r => { %>
  <div class="col s12 m7">
    <div class="card green lighten-4 center-align">
      <div class="card-image">
        <img src="<%=r.image %>"> 
      </div>
      <div class="card-content">
        <p><%=r.title %></p>
      </div>
      <div class="card-action">
        <form action="/show/detail" method="GET">
          <input type="text" name="r_id" id="r_id" value="<%=r.id %>" hidden>
          <button type="submit" class="waves-effect waves-light btn light-blue darken-1"><i class="material-icons left">search</i>See More</button>
        </form>
      </div>
    </div>
  </div>
<% }); %> 
  <ul class="pagination">
    <li class="disabled"><a href="#!"><i class="material-icons">chevron_left</i></a></li>
    <li class="waves-effect"><a href="/show/0">1</a></li>
    <li class="waves-effect"><a href="/show/1">2</a></li>
    <li class="waves-effect"><a href="/show/2">3</a></li>
    <li class="waves-effect"><a href="/show/3">4</a></li>
    <li class="waves-effect"><a href="/show/4">5</a></li>
    <li class="waves-effect"><a href="#!"><i class="material-icons">chevron_right</i></a></li>
  </ul>
</div>